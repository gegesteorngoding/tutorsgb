{{- /* custom sitemap: only standard namespace */ -}}
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
{{- range .Site.Pages -}}
  {{- if and (not .Params.draft) (ne .Kind "Section") -}}
<url>
  <loc>{{ .Permalink }}</loc>
  <lastmod>{{ .Lastmod.Format "2006-01-02" }}</lastmod>
</url>
  {{- end -}}
{{- end -}}
</urlset>

